<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <layer-list>

            <item>

                <shape>
                    <gradient android:angle="90" android:endColor="#00000000" android:startColor="#00000000" android:type="linear" />

                    <stroke android:width="0.1dp" android:color="#00000000" />

                    <corners android:radius="1dp" />

                    <padding android:bottom="0dp" android:left="12dp" android:right="12dp" android:top="0dp" />
                </shape>


            </item>

            <item>
                <bitmap android:gravity="right|center" android:src="@drawable/spn_bg" />
                // you can use any other image here, instead of default_holo_dark_am


            </item>


        </layer-list>

    </item>

</selector>